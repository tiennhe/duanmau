<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh Sửa Sách"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txtmasachedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="normal"

       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập tên sách"
        android:id="@+id/edttensachedit"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập Tiền "
        android:id="@+id/edttienedit"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sách:"
            android:textStyle="normal"
            android:textSize="15dp"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spnerloaisachedit"/>


    </LinearLayout>



</LinearLayout>