<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/taikhoan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bo_goc"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:ems="15"
            android:hint="    tên đăng nhập"
            android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/matkhau"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bo_goc"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:ems="15"

                    android:hint="     passworld"
                    android:inputType="textPassword"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/show_height_pass"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignRight="@+id/matkhau"
                    android:layout_marginTop="15dp"

                    android:layout_marginRight="5dp"/>

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/matkhau" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"

                    android:text="nhớ mật khẩu?"
                    android:textStyle="bold"
                    android:layout_below="@+id/matkhau"
                    android:layout_toRightOf="@+id/checkbox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="140dp"
                    android:text="Quên mật khẩu?"
                    android:textStyle="bold"
                    android:layout_below="@+id/matkhau"
                    android:layout_toRightOf="@+id/checkbox"/>
            </RelativeLayout>



        <Button
            android:id="@+id/btndangnhap"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bo_goc"
            android:text="đăng nhập" />

        <Button
            android:background="@drawable/bo_goc"
            android:id="@+id/btndangki"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="đăng kí " />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>